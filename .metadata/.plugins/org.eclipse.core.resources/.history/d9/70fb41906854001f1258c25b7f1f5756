package com.subway.persistence;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.subway.domain.Station;

public interface StationRepository extends JpaRepository<Station, Integer> {

	
	
	
	@Query()
	Station getStationData();

	@Query(value = "SELECT column_name\r\n"
			+ "FROM information_schema.columns\r\n"
			+ "WHERE table_schema = 'busan_subway_test'\r\n"
			+ "  AND table_name = 'passenger_count'\r\n"
			+ "  AND column_name LIKE 'hour%';", nativeQuery = true)
	void getHour_Cols();

}
