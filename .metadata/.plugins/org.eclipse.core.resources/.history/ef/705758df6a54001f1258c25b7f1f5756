package com.subway.persistence;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.subway.domain.Station;

public interface StationRepository extends JpaRepository<Station, Integer> {

//	@Query()
//	Station getStationData();

	@Query(value = "SELECT column_name FROM information_schema.columns "
			+ "WHERE table_schema = 'busan_subway_test' AND table_name = 'passenger_count' AND column_name "
			+ "LIKE 'hour_:hour%'", nativeQuery = true)
	List<String> getHour_Cols();

}
