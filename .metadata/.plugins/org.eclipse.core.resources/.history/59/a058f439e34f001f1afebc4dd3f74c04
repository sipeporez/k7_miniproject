	public Board getBoard(Integer id) {
		return br.findById(id).get();
	}

	public List<Board> saveBoard(Board b) {
		br.save(Board.builder().title(b.getTitle()).content(b.getContent()).nickname(b.getNickname())
				.createDate(new Date()).build());

		return br.findAll();
	}

}
